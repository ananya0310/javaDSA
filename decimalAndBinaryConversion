import java.util.Scanner;
public class NumberConversion {

    public static void binaryConversion(int binNum){
        int pow = 0;
        int dec = 0;
        while(binNum > 0){
            int lastDigit = binNum % 10;
            dec = dec + (lastDigit * (int)Math.pow(2, pow));
            binNum /= 10; 
            pow++;
        }
        System.err.println(dec);   
    }

    public static void decimalConversion(int decimal){
        int pow = 0;
        int bin = 0;
        while(decimal > 0){
            int remainder = decimal % 2;
            bin = bin + (remainder * (int)Math.pow(10, pow));
            decimal = decimal / 2;
            pow++;
        }
        System.err.println(bin);
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.err.println("Enter the decimal number : ");
        int decimal = sc.nextInt();
        System.err.print("The binary equivalent of decimal  is  : ");
        decimalConversion(decimal);
        System.err.println("Enter a binary number: ");
        int bin = sc.nextInt();
        System.err.println("The decimal equivalent of binary is : ");
        binaryConversion(bin);
    }
}
/*

 Enter the decimal number : 78
The binary equivalent of decimal  is  : 1001110
Enter a binary number: 110111
The decimal equivalent of binary is : 55

 */
