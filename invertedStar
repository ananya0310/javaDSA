
import java.util.Scanner;

public class invertedStar {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.err.println("Enter a number N: ");
        int n = sc.nextInt();
        for(int i=1;i<=n;i++){
            for(int j=1;j<=(n-i+1);j++){
                System.err.print("& ");
            }
            System.err.println("");
        }
    }
}
/* Pattern to be printed is 

    & & & & & 
    & & & &
    & & &
    & &
    &

 */
