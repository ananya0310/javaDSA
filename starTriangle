public class starTriangle {
    public static void main(String[] args) {
        int n=4;
        for(int lines=1;lines<=n;lines++){
            for(int stars=1;stars<=lines;stars++){
                System.err.print("& ");
            }
        }
        
    }
}


/*PATTERN TO PRINT 
 * &
 * & &
 * & & &
 * & & & &
 */
